}

<h2>ViewAll</h2>



<div class="col-md-9">
   


            <table>


               



                <tr>

                    <td>

                       
                                @foreach (var i in Model)
                                {
                        <div class="container">

                            <div class="jumbotron">
                             

                                    <a href="/Home/ViewArticle/@i.Id" style="font-size:20px;color:black"> @i.Title   </a>

