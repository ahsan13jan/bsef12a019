@Model Sample MVC.Models.Article

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>


    $(document).ready(function () {
        $('#addRow').on('click', function () {

            
            var name = $('#Name').val();
            var text = $('#Text').val();


            $.getJSON('/Admin/searchArticleAjax?name=' + name + '&text=' + text, function (d) {
                





                for (a = 0 ; a < d.length ; a++)
                {

                    var rec = d[a];

                    $('#myTable').append("<tr><td>" + rec.Title + " </td> <td> " + rec.Text + "</td> </tr>");
                }

            }
                      )



        });
    });

</script>





<div class="container">
    <div class="row">
        <h1>Admin Panel</h1>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="well">
                <div>
                    <ul class="nav">
                        <li>
                            <label label-default="" class="tree-toggle nav-header">Articles</label>
                            <ul class="nav tree">
                                <li>
                                    <a href="/Admin/Published">Published</a>
                                </li>
                                <li>
                                    <a href="/Admin/NotPublished">Not Published</a>
                                </li>
                                <li>
                                    <a href="/Admin/SearchArticle">Search Article</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <label label-default="" class="tree-toggle nav-header">Position</label>
                            <ul class="nav tree">
                                <li>
                                    <a href="/Admin/Main">Main</a>
                                </li>
                                <li>
                                    <a href="/Admin/RecentBlogs">Recent Blogs</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <label label-default="" class="tree-toggle nav-header">Users</label>
                            <ul class="nav tree">
                                <li>
                                    <a href="/Admin/showUsers">Active Users</a>
                                </li>


                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>



        <div class="col-md-9">
      

                

                   <h4> Search Article </h4>

                    

                        Name : @Html.TextBox("Name", null, new { @class = "form-control" }) <br />

                        Text : @Html.TextBox("Text", null, new { @class = "form-control" })

                    <button  id="addRow"> Search </button>
                    <br />
                    <br />
                        <table id="myTable" border="1" align="center" width="700">

                            <tr>
                                <td>Name </td> <td> User Id </td> 
                            </tr>

                        </table>
                    
                   
        </div>


    </div>
</div>
