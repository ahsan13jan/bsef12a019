@model Sample_MVC.Models.Article

<div class="container">
    <div class="row">
        <h1>Admin Panel</h1>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="well">
                <div>
                    <ul class="nav">
                        <li>
                            <label label-default="" class="tree-toggle nav-header">Articles</label>
                            <ul class="nav tree">
                                <li>
                                    <a href="/Admin/Published">Published</a>
                                </li>
                                <li>
                                    <a href="/Admin/NotPublished">Not Published</a>
                                </li>
                                <li>
                                    <a href="/Admin/SearchArticle">Search Article</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <label label-default="" class="tree-toggle nav-header">Position</label>
                            <ul class="nav tree">
                                <li>
                                    <a href="/Admin/Main">Main</a>
                                </li>
                                <li>
                                    <a href="/Admin/RecentBlogs">Recent Blogs</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <label label-default="" class="tree-toggle nav-header">Users</label>
                            <ul class="nav tree">
                                <li>
                                    <a href="/Admin/showUsers">Active Users</a>
                                </li>


                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>



        <div class="col-md-9">
            <div class="jumbotron">

                <div class="container">


                    <table>

                       
                            <tr>
                                <td>
                                    <label label-default="" class="tree-toggle nav-header">
                                        Articles
                                    </label>
                                </td>


                            </tr>

                            <tr>
                                <td>
                                    <a style="align-content:center"> Title :  @Model.Title </a>
                                </td>

                            </tr>

                            <tr>
                                <td>
                                    <p style="font-size:15px"> @Model.Text  </p>
                                </td>

                            </tr>

                            <tr>
                                <td>
                                    <form method="post" action="/Admin/ChangePosition">


                                        <div class="form-group" style="height:10px">
                                            <input type="hidden" value="@Model.Id" name="Id" />
                                            <select class="form-control" id="sel1" name="Pos">
                                                <option>None</option>
                                                <option>Main</option>
                                                <option>Recent Blogs</option>

                                            </select>
                                        </div>

                                        <br />
                                        <input style="font-size:15px;height:30px" type="submit" value="Apply Setting" />

                                    </form>
                                </td>

                            </tr>





                    </table>





                </div>

            </div>

               
            
        </div>


    </div>
</div>
